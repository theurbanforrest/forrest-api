{
  "name": "Task",
  "plural": "Tasks",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    },
    "task_date_time": {
      "type": "string",
      "required": true
    },
    "due_date_time": {
      "type": "string"
    },
    "length_in_ms": {
      "type": "number",
      "required": true
    },
    "fk_flavor_id": {
      "type": "number",
      "required": true
    },
    "fk_status_id": {
      "type": "number"
    },
    "fk_parent_task_id": {
      "type": "number"
    },
    "fk_customuser_id": {
      "type": "number"
    },
    "fk_group_id": {
      "type": "number"
    },
    "last_modified": {
      "type": "object",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "status": {
      "type": "hasOne",
      "model": "Status",
      "foreignKey": "id",
      "primaryKey": "fk_status_id"
    },
    "flavor": {
      "type": "hasOne",
      "model": "Flavor",
      "foreignKey": "id",
      "primaryKey": "fk_flavor_id"
    },
    "parentTask": {
      "type": "hasOne",
      "model": "Task",
      "foreignKey": "id",
      "primaryKey": "fk_parent_task_id"
    },
    "childTasks": {
      "type": "hasMany",
      "model": "Task",
      "foreignKey": "fk_parent_task_id",
      "primaryKey": "id"
    },
    "entries": {
      "type": "hasMany",
      "model": "Entry",
      "foreignKey": "fk_task_id",
      "primaryKey": "id"
    },

    "groups": {
      "type": "belongsTo",
      "model": "Group",
      "foreignKey": ""
    }


  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    /**
      This allows any authenticated user to do anything
      2019-02-07: testing out allowing only to teamMembers from boot/role-resolver.js
    **/
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "findById"
    },
    
    /**
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "teamMember",
      "permission": "ALLOW",
      "property": "findById"
    }
    **/
  ],
  "methods": {}
}
