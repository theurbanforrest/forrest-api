{
  "name": "Person",
  "plural": "Persons",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "email": {
      "type": "string"
    },
    "fk_flavor_id": {
      "type": "number",
      "required": true
    },
    "fk_status_id": {
      "type": "number",
      "required": true
    },
    "fk_group_id": {
      "type": "number"
    },
    "last_modified": {
      "type": "object",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "status": {
      "type": "hasOne",
      "model": "Status",
      "foreignKey": "id",
      "primaryKey": "fk_status_id"
    },
    "flavor": {
      "type": "hasOne",
      "model": "Flavor",
      "foreignKey": "id",
      "primaryKey": "fk_flavor_id"
    },
    "groups": {
      "type": "hasAndBelongsToMany",
      "model": "Group"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
